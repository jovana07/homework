    <%= f.label :paid %><br>
    <%= f.check_box :paid %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :currency %><br>
    <%= f.text_field :currency %>
  </div>
  <div class="field">
    <%= f.label :refunded %><br>
    <%= f.check_box :refunded %>
  </div>
  <div class="field">
    <%= f.label :customer_id %><br>
    <%= f.number_field :customer_id %>
  </div>
  <div class="field">
    <%= f.label :charge_type %><br>
    <%= f.select :charge_type, options_for_select([["Failed", "failed"], ["Disputed", "disputed"], ["Successful", "successful"]]) %>
    
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
